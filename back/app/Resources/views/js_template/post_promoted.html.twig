<script id="post-short-template" type="text/template">
    <article class="post">
        <div class="meta">
            <time datetime="2015-09-24"><%= date %></time>
        </div>

        <div class="img-container">
            <a class="img" style="background-image:url(<%= image %>);" href="#"></a>
        </div>

        <div class="copy-container">
            <div class="copy">
                <h2><a href="#!/post/<%= slug %>"><%= title %></a></h2>

                <div class="excerpt">
                    <%= summary %>
                </div>
            </div>
        </div>
        <a class="link" href="#!/post/<%= slug %>">Read more <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span></a>
    </article>
</script>